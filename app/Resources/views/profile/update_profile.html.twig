{% extends 'basis.html.twig' %}

{% block basis %}
    {% block sidebar %}{% endblock %}
    <h1>Update profile </h1>
    <div class="col-xs-6 col-sm-6">

        {{ form_start(form) }}
        {{ form_widget(form) }}
        {{ form_end(form) }}
    </div>
    <div class="col-xs-6 col-sm-6">
        <h4>Update profile image</h4>
        {% set  filter= app.session.get('user') %}
        {% if filter %}
            {% set profile_image_path = filter['profile_image_path'] %}
            <a href="{{ url('profile', {'id':app.user.id}) }}">
                <img src="{{ asset(profile_image_path)}}" class="w3-circle w3-margin-right" style="width:100px;border-radius:0;margin-bottom: 30px;">
            </a>
        {% endif %}
        {{ form_start(formImage) }}
        {{ form_widget(formImage) }}
        {{ form_end(formImage) }}
    </div>
{% endblock %}