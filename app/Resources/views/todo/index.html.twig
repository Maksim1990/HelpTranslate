            });

    </script>
<script>
    $('.dash_column').click(function () {
        var teachers=$(this).attr('data-teachers');
        var languages=$(this).attr('data-languages');
        var works=$(this).attr('data-works');
        var students=$(this).attr('data-students');
        if(teachers=='true'){
            window.location.href='/{{ app.request.locale }}/teachers/all';
        }else if(works=='true'){
            window.location.href='/{{ app.request.locale }}/list';
        }else if(languages=='true'){
            window.location.href='/{{ app.request.locale }}/languages';
        }else if(students=='true'){
            window.location.href='/{{ app.request.locale }}/students/all';
        }
    });
</script>
