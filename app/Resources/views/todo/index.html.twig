    <script src="{{ asset('js/jquery.waypoints.js') }}"></script>
    <script type="text/javascript">

        $('.img ')
            .waypoint(function(dir) {
                    if(dir === 'down'){
                        $('.img ').removeClass('fadeOutDown').addClass(' fadeInUp');
                    }else{
                        $('.img').removeClass('fadeInUp').addClass(' fadeOutDown');
                    }

                },{
                    offset: "70%"
                }
            );
        $('.img').waypoint(function(dir) {
                if(dir === 'down'){
                    $('.img')
                        .removeClass('fadeInUp')
                        .addClass(' fadeOutDown');
                }else{
                    $('.img')
                        .removeClass('fadeOutDown')
                        .addClass('fadeInUp ');
                }
            },{
                offset: -50
            }
        );

        $('#dash_advertise h1')
            .waypoint(function(dir) {
                    if(dir === 'down'){
                        $('#dash_advertise h1').removeClass('fadeOutDown').addClass(' fadeInUp');
                    }else{
                        $('#dash_advertise h1').removeClass('fadeInUp').addClass(' fadeOutDown');
                    }

                },{
                    offset: "70%"
                }
            );
        $('#dash_advertise h1').waypoint(function(dir) {
                if(dir === 'down'){
                    $('#dash_advertise h1')
                        .removeClass('fadeInUp')
                        .addClass(' fadeOutDown');
                }else{
                    $('#dash_advertise h1')
                        .removeClass('fadeOutDown')
                        .addClass('fadeInUp ');
                }
            },{
                offset: -50
            }
        );
    </script>
{% endblock %}