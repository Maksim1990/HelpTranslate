                    <span class="w3-badge w3-red" id="current_new_messages"></span>
                </a>

                <a href="{{ url('profile', {'id':app.user.id}) }}" class="w3-bar-item w3-button" data-toggle="tooltip" data-placement="bottom" title="{{ 'my_profile'|trans }}"><i class="fa fa-user"></i></a>
