        <div class="w3-container w3-row">
            <div class="w3-col s3">
                {% set  filter= app.session.get('user') %}
                {% if filter %}
                {% set profile_image_path = filter['profile_image_path'] %}
                    <a href="{{ url('profile', {'id':app.user.id}) }}">
                        <img src="{{ asset(profile_image_path)}}" class="w3-circle w3-margin-right" style="width:46px">
                    </a>
                {% endif %}
            </div>
            <div class="w3-col s9 w3-bar">

                <span>{{ 'welcome'|trans }}, <strong>{{ app.user.username|capitalize  }}</strong>!</span><br>

